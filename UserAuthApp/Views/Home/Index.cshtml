@using Microsoft.AspNetCore.Identity
@using UserAuthApp.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}
<div class="text-center">
    <h2 class="display-4" style="margin-bottom: 1em;">Manage users here</h2>
</div>
<div style="margin-bottom: 0.3em; display: flex;">
    <form asp-action="BlockUser" asp-route-id="" method="post">
        <button type="submit" class="btn btn-primary" style="margin-right: 0.3em;" title="Block user(s)">Block user(s)</button>
    </form>
    <form asp-action="UnblockUser" asp-route-id="" method="post">
        <button type="submit" class="btn btn-success" style="margin-right: 0.3em;" title="Unblock user(s)"><i class="fas fa-unlock-alt"></i></button>
    </form>
    <form asp-action="Delete" asp-route-id="" method="post">
        <button type="submit" class="btn btn-danger" style="margin-right: 0.3em;" title="Delete user(s)"><i class="far fa-trash-alt"></i></button>
    </form>
</div>

<table class="table">
    <thread>
        <tr>
            <th style="text-align: center;">
                Select&nbsp;All <br />
                <input type="checkbox" id="checkAll" />
            </th>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Registred
            </th>
            <th>
                Latest login
            </th>
            <th>
                Status
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td style="text-align: center;">
                    <input type="checkbox" value="@user.Id" class="checkBox" name="tags"/>
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Id)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.RegistrationDate)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.LastLoginTime)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Status)
                </td>
                <td>
                    <form asp-action="BlockUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-primary" style="margin-right: 0.3em;" title="Block user(s)">Block</button>
                    </form>
                </td>
                <td>
                    <form asp-action="UnblockUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-success" style="margin-right: 0.3em;" title="Unblock user(s)"><i class="fas fa-unlock-alt"></i></button>
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger" style="margin-right: 0.3em;" title="Delete user(s)"><i class="far fa-trash-alt"></i></button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
